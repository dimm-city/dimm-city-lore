---
let story = Astro.props.src || "/stories/prologue/Prologue.html";
let type = "SugarCubev2";

---
<style>
<link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Droid+Sans+Mono" />
iframe{
	border: 0;
	width: 90%;
	margin: 0.33em;
    overflow: hidden;
}
</style>
<iframe id="story" src={story} style="width: 100%" onload="injectStyles()" client:load />
<script>
 function injectStyles() {
	let link = document.createElement("link");
	link.href = "/assets/variables.css"; 
	link.rel = "stylesheet"; 
	link.type = "text/css"; 
	frames[0].document.head.appendChild(link);

 	let dc = document.createElement("link");
	dc.href = "/stories/dimm-city.css"; 
	dc.rel = "stylesheet"; 
	dc.type = "text/css"; 
	frames[0].document.head.appendChild(dc);
 };
</script>