iframe { width: 100%; height: 100%; clip-path: inherit; border: 0; }

</style>
<iframe id="story" src={story}  onload="storyLoaded()" client:load/>
<script>
	function loadStory(story) {
		if(!story) story = "none";
		frames[0].location = `/stories/${story}.html`;	
		console.log(frames[0].contentWindow);
	}

	function selectStory(story) {
		loadStory(story);
		document.dispatchEvent(new CustomEvent('story.selected',{
			detail: story
		}));
	}

	function exitStory() {
		selectStory();
	}

	function storyLoaded() {
